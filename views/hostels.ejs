<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1 class="animated-title">Student Portal </h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/courses">Courses </a></li>
                <li><a href="/register-courses">Course Registration </a></li>
                <li><a href="/hostels">Hostels </a></li>
                <li><a href="/register-hostels">Hostel Registration </a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="home">
            <h2>Hostels</h2>
        </section>
        <section id="studentList">
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Student ID</th>
                        <th>Hostel Name</th>
                        <th>Hostel Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="students" >
 
                    <% hostels.forEach(hostel => { %>
                        <tr>
                        <td><%= hostel.firstName %></td>
                        <td><%= hostel.lastName %></td>
                        <td><%= hostel.studentId %></td>
                        <td><%= hostel.studentHostel %></td>
                        <td><%= hostel.studentRoom %></td>
                        <td class="button-container">
                            <a href="/hostels/<%= hostel.id %>/edit" style="text-decoration: none;">
                                <button type="button" class="action-button edit-button">Edit</button>
                            </a>
                            <button class="action-button delete-button delete-btn" data-id="<%= hostel.id %>">Delete</button>
                        </td>
                
                       
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Student Portal Application</p>
    </footer>
    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const hostelId = this.getAttribute('data-id');
            const confirmed = confirm("Are you sure you want to delete this hostel?");
            if (!confirmed) return;

            try {
            const response = await fetch(`/hostels/${hostelId}`, {
                method: 'DELETE',
                headers: {
                'Content-Type': 'application/json'
                }
            });
            if (response.ok) {
                this.closest('tr').remove();
            } else {
                alert('Failed to delete hostel');
            }
            } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while trying to delete the hostel.');
            }
        });
        });

      </script>
</body>
</html>