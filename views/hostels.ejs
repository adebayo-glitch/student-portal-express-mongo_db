<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <h1 class="animated-title">Student Portal </h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/courses">Course Registration </a></li>
                <li><a href="/hostels">Hostel Registration </a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="home">
            <h2>Hostel Registration</h2>
            <p>Use the form below to register for your hostel.</p>
        </section>
        <section id="studentForm">

            <form id="hostelForm" action="/hostels" method="POST">
                <label for="firstName">First name:</label>
                <input type="text" id="firstName" name="firstName" required minlength="2">

                <label for="lastName">Last name:</label>
                <input type="text" id="lastName" name="lastName" required minlength="2">

                <label for="studentId">Student ID:</label>
                <input type="text" id="studentId" name="studentId" required pattern="[A-Z]{2}[0-9]{4}">

                <label for="studentHostel">Hostel name:</label>
                <select id="studentHostel" name="studentHostel" required>
                    <option value="">Select Hostel Name</option>
                    <option value="Gate Hall">Gate Hall </option>
                    <option value="Billy Hall">Billy Hall</option>
                </select>

                <label for="studentRoom">Room Number:</label>
                <select id="studentRoom" name="studentRoom" required>
                    <option value="">Select Room Number</option>
                    <option value="201">201 </option>
                    <option value="202">202</option>
                    <option value="205">205 </option>
                    <option value="209">209</option>
                </select>
                <button type="submit" style="  display: flex;">Submit</button>
            </form>
        </section>
        <section id="studentList">
            <h2>Hostels</h2>
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Student ID</th>
                        <th>Hostel Name</th>
                        <th>Hostel Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="students" >
 
                    <% hostels.forEach(hostel => { %>
                        <tr>
                        <td><%= hostel.firstName %></td>
                        <td><%= hostel.lastName %></td>
                        <td><%= hostel.studentId %></td>
                        <td><%= hostel.studentHostel %></td>
                        <td><%= hostel.studentRoom %></td>
                        <td><button type="submit" ><a href="/hostels/<%= hostel.id %>/edit">Edit</a></button></td>
                        <td >
                            <button class="delete-btn" data-id="<%= hostel.id %>">Delete</button>
                        </td>
                       
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Student Portal Application</p>
    </footer>
    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const hostelId = this.getAttribute('data-id');
            const confirmed = confirm("Are you sure you want to delete this hostel?");
            if (!confirmed) return;

            try {
            const response = await fetch(`/hostels/${hostelId}`, {
                method: 'DELETE',
                headers: {
                'Content-Type': 'application/json'
                }
            });
            if (response.ok) {
                this.closest('tr').remove();
            } else {
                alert('Failed to delete hostel');
            }
            } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while trying to delete the hostel.');
            }
        });
        });

      </script>
</body>
</html>