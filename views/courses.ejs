<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header>
        <h1 class="animated-title">Student Portal </h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/courses">Course Registration </a></li>
                <li><a href="/hostels">Hostel Registration </a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section id="home">
            <h2>Course Registration</h2>
            <p>Use the form below to register for your courses.</p>
        </section>
        <section id="studentForm">
           
            <form id="addCourseForm" action="/courses" method="POST">
                <label for="firstName">First name:</label>
                <input type="text" id="firstName" name="firstName" required minlength="2">
                <label for="lastName">Last name:</label>
                <input type="text" id="lastName" name="lastName" required minlength="2">
                <label for="studentId">Student ID:</label>
                <input type="text" id="studentId" name="studentId" required pattern="[A-Z]{2}[0-9]{4}">
                <label for="studentDepartment">Department:</label>
                <select id="studentDepartment" name="studentDepartment" required>
                    <option value="">Select your Department</option>
                    <option value="Software Engineering">Software Engineer</option>
                    <option value="Cyber Security">Cyber Security</option>
                </select>

                <label for="studentSession">Session:</label>
                <select id="studentSession" name="studentSession" required>
                    <option value="">Select your seesion</option>
                    <option value="2024/2025">2024/2025 </option>
                    <option value="2025/2026">2025/2026</option>
                </select>
                
                <div class="courses-container">
                    <h2>Select Your Courses</h2>
                    <% courses.forEach(course => { %>
                        <div class="course">
                            <input type="checkbox" id="<%= course.id %>" name="courses" value="<%= course.code %> (<%= course.name %>)">
                            <label for="<%= course.id %>"><%= course.code %> (<%= course.name %>)</label>
                        </div>
                    <% }); %>
                </div>

                <button type="submit">Register</button>
            </form>
        </section>
        <section id="studentList">
            <h2>Registered Courses</h2>
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Student ID</th>
                        <th>Department</th>
                        <th>Session</th>
                        <th>Courses</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="students">
                    <% students.forEach(student => { %>
                        <tr>
                            <td><%= student.firstName %></td>
                            <td><%= student.lastName %></td>
                            <td><%= student.studentId %></td>
                            <td><%= student.studentDepartment %></td>
                            <td><%= student.studentSession %></td>
                            <td><%= student.courses %></td>
                            <td><button type="submit" ><a href="/students/<%= student.id %>/edit">Edit</a></button></td>
                            <td >
                                <button class="delete-btn" data-id="<%= student.id %>">Delete</button>
                            </td>
        
                          
              
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Student Portal Application</p>
    </footer>
    <script>
        document.querySelectorAll('.delete-btn').forEach(button => {
        button.addEventListener('click', async function() {
            const studentId = this.getAttribute('data-id');
            
            const confirmed = confirm("Are you sure you want to delete this student?");
            if (!confirmed) return;

            try {
            const response = await fetch(`/students/${studentId}`, {
                method: 'DELETE',
                headers: {
                'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                // If the delete was successful, remove the row from the table
                this.closest('tr').remove();
            } else {
                alert('Failed to delete student');
            }
            } catch (error) {
            console.error('Error:', error);
            alert('An error occurred while trying to delete the student.');
            }
        });
        });

      </script>
      
</body>
</html>